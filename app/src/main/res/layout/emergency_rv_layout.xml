<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/organization_name_tv"
        android:layout_width="220dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="148dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:text="This is for the organization name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grid_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/organization_location_tv"
        android:layout_width="224dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:text="This is for the organization location"
        app:layout_constraintEnd_toStartOf="@+id/call_btn"
        app:layout_constraintStart_toEndOf="@+id/grid_list"
        app:layout_constraintTop_toBottomOf="@+id/organization_phone_tv" />

    <TextView
        android:id="@+id/organization_phone_tv"
        android:layout_width="218dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="148dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:text="This is for the organization phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grid_list"
        app:layout_constraintTop_toBottomOf="@+id/organization_name_tv" />

    <Button
        android:id="@+id/call_btn"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="#8BC34A"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:text="Call now"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/grid_list"
        android:layout_width="10dp"
        android:layout_height="149dp"
        android:layout_marginBottom="1dp"
        android:background="@color/blue_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>