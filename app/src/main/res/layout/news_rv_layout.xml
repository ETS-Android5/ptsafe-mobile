<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:elevation="2dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="81dp"
        android:layout_height="102dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="13dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:maxLines="2"
        android:singleLine="false"
        android:text="News title"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/news_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/news_short_content"
        android:layout_width="248dp"
        android:layout_height="42dp"
        android:layout_marginTop="13dp"
        android:elevation="2dp"
        android:fontFamily="@font/roboto"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_image"
        app:layout_constraintTop_toBottomOf="@+id/news_title" />

    <Button
        android:id="@+id/read_more_btn"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:elevation="2dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green_secondary"
        android:text="@string/read_more"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_image"
        app:layout_constraintTop_toBottomOf="@+id/news_short_content" />

    <TextView
        android:id="@+id/news_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:elevation="2dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="33dp"
        android:text="label"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/read_more_btn"
        app:layout_constraintStart_toEndOf="@+id/news_image"
        app:layout_constraintTop_toBottomOf="@+id/news_short_content" />
</androidx.constraintlayout.widget.ConstraintLayout>