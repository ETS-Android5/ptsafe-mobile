<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/onboarding_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomeFragment"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/nearest_station_home_tv2"
        android:layout_width="268dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/roboto"
        android:text="Discover PTSafe Experiences"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detect_crowding_vw" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="19dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="18dp"
        android:elevation="3dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintBottom_toBottomOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toStartOf="@+id/first_nearest_station_vw"
        app:layout_constraintTop_toBottomOf="@+id/station_address_tv" />

    <!--    android:elevation="3dp"-->

    <TextView
        android:id="@+id/nearest_station_home_tv"
        android:layout_width="275dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/roboto"
        android:text="Recommended station from my place"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_vw" />

    <View
        android:id="@+id/first_nearest_station_vw"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/nearest_station_shape"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearest_station_home_tv" />

    <!--    android:elevation="3dp"-->
    <TextView
        android:id="@+id/station_name_tv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_medium"
        android:text="fetching the station"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toStartOf="@+id/first_nearest_station_vw"
        app:layout_constraintTop_toTopOf="@+id/first_nearest_station_vw" />

    <!--    android:elevation="3dp"-->
    <TextView
        android:id="@+id/station_address_tv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:elevation="3dp"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_medium"
        android:text="fetching the station name"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toStartOf="@+id/first_nearest_station_vw"
        app:layout_constraintTop_toBottomOf="@+id/station_name_tv" />

    <!--    android:elevation="3dp"-->

    <!--    android:elevation="3dp"-->
    <TextView
        android:id="@+id/nearest_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="22dp"
        android:elevation="3dp"
        android:fontFamily="@font/raleway"
        android:text="fetching the distance"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/station_address_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onboarding_vw"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/train_four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/trip_title"
            android:layout_width="323dp"
            android:layout_height="153dp"
            android:layout_marginTop="156dp"
            android:fontFamily="@font/roboto"
            android:text="Plan your trips with less-crowded and safer trains "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_trip_onboarding_btn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="131dp"
            android:backgroundTint="@color/white"
            android:bottomLeftRadius="200dp"
            android:bottomRightRadius="200dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Add trip"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detect_crowding_vw"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/crowdness"
        app:layout_constraintTop_toBottomOf="@+id/first_nearest_station_vw"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/onboarding_detection"
            android:layout_width="319dp"
            android:layout_height="134dp"
            android:layout_marginTop="156dp"
            android:fontFamily="@font/roboto"
            android:text="Report crowdedness level for other users"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/crowdedness_onboarding_btn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="131dp"
            android:backgroundTint="@color/white"
            android:bottomLeftRadius="200dp"
            android:bottomRightRadius="200dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Report"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onboarding_detection" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meditation_onboarding_vw"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/meditation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearest_station_home_tv2">

        <TextView
            android:id="@+id/maditation_onboarding_tv"
            android:layout_width="265dp"
            android:layout_height="128dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="Meditation when you are feeling anxious"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/meditation_onboarding_btn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="237dp"
            android:backgroundTint="@color/white"
            android:bottomLeftRadius="200dp"
            android:bottomRightRadius="200dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Meditate"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maditation_onboarding_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/news_onboarding_vw"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/people_reading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meditation_onboarding_vw">

        <TextView
            android:id="@+id/news_onboarding_tv"
            android:layout_width="243dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="Read news while you are on board"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/news_onboarding_btn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="237dp"
            android:backgroundTint="@color/white"
            android:bottomLeftRadius="200dp"
            android:bottomRightRadius="200dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Read news"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_onboarding_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emergency_onboarding_vw"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/emergency_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_onboarding_vw">

        <TextView
            android:id="@+id/emergency_onboarding_tv"
            android:layout_width="265dp"
            android:layout_height="128dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:text="Call emergencies if you are getting offended"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/emergency_onboarding_btn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="237dp"
            android:backgroundTint="@color/white"
            android:bottomLeftRadius="200dp"
            android:bottomRightRadius="200dp"
            android:fontFamily="@font/raleway_medium"
            android:text="Call emergencies"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:topLeftRadius="200dp"
            android:topRightRadius="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.179"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emergency_onboarding_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>