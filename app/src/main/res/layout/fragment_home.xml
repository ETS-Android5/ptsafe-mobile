<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomeFragment"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="0dp">

    <TextView
        android:id="@+id/most_used_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="240dp"
        android:text="most used menu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_nearest_station_vw" />

    <View
        android:id="@+id/add_trip_menu_view"
        android:layout_width="165dp"
        android:layout_height="138dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/news_menu_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/most_used_menu_tv" />

    <TextView
        android:id="@+id/add_trip_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:text="my trip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/add_trip_menu_view"
        app:layout_constraintStart_toStartOf="@+id/add_trip_menu_view"
        app:layout_constraintTop_toTopOf="@+id/add_trip_menu_view" />

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="253dp"
        android:text="@string/welcome_home"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/detect_menu_view"
        android:layout_width="165dp"
        android:layout_height="138dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/crowding_menu_shape"
        app:layout_constraintEnd_toStartOf="@+id/add_trip_menu_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/most_used_menu_tv" />

    <TextView
        android:id="@+id/crowding_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:elevation="3dp"
        android:text="@string/menu_detect_crowding"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/detect_menu_view"
        app:layout_constraintStart_toStartOf="@+id/detect_menu_view"
        app:layout_constraintTop_toTopOf="@+id/detect_menu_view" />

    <TextView
        android:id="@+id/nearest_station_home_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="56dp"
        android:text="less crowded station from my place"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_tv" />

    <View
        android:id="@+id/first_nearest_station_vw"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:layout_marginStart="10dp"
        android:elevation="3dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/news_rv_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearest_station_home_tv" />

    <TextView
        android:id="@+id/station_name_tv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="29dp"
        android:text="fetching the station"
        android:elevation="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toStartOf="@+id/first_nearest_station_vw"
        app:layout_constraintTop_toTopOf="@+id/first_nearest_station_vw" />

    <TextView
        android:id="@+id/station_address_tv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:text="fetching the station name"
        android:elevation="3dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toStartOf="@+id/first_nearest_station_vw"
        app:layout_constraintTop_toBottomOf="@+id/station_name_tv" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="19dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="18dp"
        android:elevation="3dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintBottom_toBottomOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toStartOf="@+id/first_nearest_station_vw"
        app:layout_constraintTop_toBottomOf="@+id/station_address_tv" />

    <TextView
        android:id="@+id/nearest_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="22dp"
        android:text="fetching the distance"
        android:textSize="8sp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/first_nearest_station_vw"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/station_address_tv" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:elevation="3dp"
        android:src="@drawable/camera_icon_transparent"
        app:layout_constraintEnd_toEndOf="@+id/detect_menu_view"
        app:layout_constraintStart_toStartOf="@+id/detect_menu_view"
        app:layout_constraintTop_toBottomOf="@+id/crowding_menu_tv" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="57dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:elevation="3dp"
        android:src="@drawable/take_notes_icon"
        app:layout_constraintEnd_toEndOf="@+id/add_trip_menu_view"
        app:layout_constraintStart_toStartOf="@+id/add_trip_menu_view"
        app:layout_constraintTop_toBottomOf="@+id/add_trip_menu_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>